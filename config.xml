<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.phonegap.getting.started"
	version 	= "1.0.6">

	<name>HydroMonitor</name>

	<description>
		HydroMonitor by HydroTech USL
	</description>

	<author href="#"
		email="ethell@student.cis.edu.hk">
		Ethelia Lung
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>
	
	<gap:splash src="splashes/splash.png" gap:role="default" />

<!-- iOS requires specific dimensions for splash screens; classic iPhone screens, Retina 
Screens, and iPad screen respectively -->
    <gap:splash src="themes/one/img/bigsplash.png" width="1024" height="786" />
    <gap:splash src="themes/one/img/bigsplash.png" width="786" height="1024" />
    <gap:splash src="themes/one/img/bigsplash.png" width="786" height="1024" />
    <gap:splash src="themes/one/img/bigsplash.png" width="786" height="1004" />
	
	<icon src="themes/one/img/hydromon-icon.png" gap:role="default" /> 
	
	<icon src="themes/one/img/hydromon-icon-small.png" width="57" height="57" /> 
    <icon src="themes/one/img/hydromon-icon-hq.png" width="114" height="114"/> 

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>